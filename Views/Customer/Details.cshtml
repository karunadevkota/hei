@model TAskHEI.Models.Customer
<style> /*the css content for details page */
    .container {
        margin-top: 50px;
        margin-bottom: 50px;
    }

    .details-table {
        width: 100%;
        max-width: 500px;
        margin: 0 auto;
    }

        .details-table th {
            width: 30%;
        }

        .details-table td {
            width: 70%;
        }

    .btn-back {
        display: block;
        margin-top: 20px;
        text-align: center;
    }
</style>

<div class="container">
    <h1 class="text-center mt-2">Customer Details</h1>

    <table class="table details-table">
        <tr>
            <th>ID</th>
            <td>@Model.CustomerID</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>Phone Number</th>
            <td>@Model.PhoneNumber</td>
        </tr>
        <tr>
            <th>Address </th>
            <td>@Model.Address</td>
        </tr>
    </table>
    <div class="text-center mt-4">
        <a href="@Url.Action("Index")" class="btn btn-primary btn-back" style="width: 120px; display: inline-block;">Back to List</a>
    </div> @*The back to list link will redirect to the index page *@
</div>

